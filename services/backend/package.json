{
  "name": "afriverse-backend",
  "version": "1.0.0",
  "description": "AfriVerse Backend API - Cultural Knowledge Preservation Platform",
  "main": "src/server.js",
  "scripts": {
    "start": "node src/server.js",
    "dev": "nodemon src/server.js",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "lint": "eslint src/",
    "lint:fix": "eslint src/ --fix",
    "prisma:generate": "prisma generate",
    "prisma:migrate": "prisma migrate dev",
    "prisma:reset": "prisma migrate reset",
    "prisma:seed": "node prisma/seed.js",
    "prisma:studio": "prisma studio",
    "build": "npm run prisma:generate",
    "docker:build": "docker build -t afriverse-backend .",
    "docker:run": "docker run -p 4000:4000 afriverse-backend",
    "healthcheck": "node src/health-check.js",
    "migrate": "npx prisma migrate deploy",
    "seed": "node prisma/seed.js",
    "clean": "rm -rf node_modules package-lock.json && npm install",
    "docs": "jsdoc -c jsdoc.json"
  },
  "keywords": [
    "afriverse",
    "cultural-preservation",
    "agi",
    "blockchain",
    "ipfs",
    "metta",
    "knowledge-graph"
  ],
  "author": "AfriVerse Team",
  "license": "MIT",
  "dependencies": {
    "@prisma/client": "^5.7.1",
    "axios": "^1.6.2",
    "bcryptjs": "^2.4.3",
    "bull": "^4.12.0",
    "compression": "^1.7.4",
    "cors": "^2.8.5",
    "crypto": "^1.0.1",
    "dotenv": "^16.3.1",
    "ethers": "^6.9.0",
    "express": "^4.18.2",
    "express-fileupload": "^1.4.3",
    "express-rate-limit": "^7.1.5",
    "form-data": "^4.0.0",
    "helmet": "^7.1.0",
    "ioredis": "^5.3.2",
    "joi": "^18.0.1",
    "jsonwebtoken": "^9.0.2",
    "morgan": "^1.10.0",
    "multer": "^1.4.5-lts.1",
    "node-fetch": "^2.7.0",
    "openai": "^6.6.0",
    "prisma": "^5.7.1",
    "winston": "^3.11.0",
    "zod": "^3.23.8"
  },
  "devDependencies": {
    "@types/express": "^4.17.21",
    "@types/node": "^20.10.6",
    "eslint": "^8.55.0",
    "jest": "^29.7.0",
    "nodemon": "^3.0.2",
    "supertest": "^6.3.4"
  },
  "jest": {
    "testEnvironment": "node",
    "clearMocks": true,
    "coverageDirectory": "coverage",
    "collectCoverageFrom": [
      "src/**/*.js",
      "!src/**/*.test.js"
    ]
  },
  "engines": {
    "node": ">=18.0.0",
    "npm": ">=9.0.0"
  }
}
