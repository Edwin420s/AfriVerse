{
  "name": "afriverse-backend",
  "version": "1.0.0",
  "description": "Backend API for AfriVerse - Cultural Knowledge Preservation Platform",
  "main": "src/server.js",
  "scripts": {
    "start": "node src/server.js",
    "dev": "nodemon src/server.js",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "lint": "eslint src/",
    "lint:fix": "eslint src/ --fix",
    "prisma:generate": "prisma generate",
    "prisma:migrate": "prisma migrate dev",
    "prisma:reset": "prisma migrate reset",
    "prisma:seed": "node prisma/seed.js",
    "build": "npm run prisma:generate",
    "docker:build": "docker build -t afriverse-backend .",
    "docker:run": "docker run -p 4000:4000 afriverse-backend"
  },
  "keywords": [
    "cultural-preservation",
    "ai",
    "blockchain",
    "knowledge-graph",
    "africa"
  ],
  "author": "AfriVerse Team",
  "license": "MIT",
  "dependencies": {
    "@prisma/client": "^5.0.0",
    "axios": "^1.5.0",
    "bull": "^4.11.3",
    "compression": "^1.7.4",
    "cors": "^2.8.5",
    "ethers": "^6.8.0",
    "express": "^4.18.2",
    "express-rate-limit": "^7.1.3",
    "form-data": "^4.0.0",
    "helmet": "^7.0.0",
    "ioredis": "^5.3.2",
    "multer": "^1.4.5-lts.1",
    "morgan": "^1.10.0",
    "openai": "^4.0.0",
    "redis": "^4.6.7"
  },
  "devDependencies": {
    "@types/jest": "^29.5.5",
    "eslint": "^8.47.0",
    "jest": "^29.6.4",
    "nodemon": "^3.0.1",
    "prisma": "^5.0.0",
    "supertest": "^6.3.3"
  },
  "engines": {
    "node": ">=18.0.0",
    "npm": ">=9.0.0"
  }
}